<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 60px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#admin-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "Admin" })">Panel de Administración</a>
            </div>
            <div class="collapse navbar-collapse" id="admin-navbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Clientes", "Index", "clientes", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "usuarios", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Roles", "Index", "roles", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Permisos", "Index", "permisos", new { area = "Admin" }, null)</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Cerrar Sesión", "Logout", "usuarios", new { area = "Admin" }, null)</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

