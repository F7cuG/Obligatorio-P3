@model obligatorio_PIII.Models.patrocinadores

@{
    ViewBag.Title = "Editar Patrocinador";
}

<h2>Editar Patrocinador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Plan de Anuncios")
        @Html.DropDownList("PlanID", null, "-- Seleccione --", new { @class = "form-control" })
    </div>

    <input type="submit" value="Guardar" class="btn btn-primary" />
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
}
