@model IEnumerable<obligatorio_PIII.Models.PlanDeAnuncios>
@{
    ViewBag.Title = "Planes de Anuncios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Planes de Anuncios</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear nuevo plan
    </a>
</p>

<table class="table table-bordered table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Patrocinador</th>
            <th>Duración (días)</th>
            <th>Frecuencia</th>
            <th>Horario</th>
            <th>Tipo</th>
            <th>Segmentación</th>
            <th>Estado</th>
            <th style="width:150px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.patrocinadores?.Nombre</td>
                <td>@item.Duracion</td>
                <td>@item.Frecuencia</td>
                <td>
                    @item.HoraInicio?.ToString("hh\\:mm") - @item.HoraFin?.ToString("hh\\:mm")
                </td>

                <td>@item.TipoDeAnuncio</td>
                <td>@item.Segmentacion</td>
                <td>
                    @if (item.Estado == "Activo")
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro de eliminar este plan?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
