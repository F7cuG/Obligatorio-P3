@{
    ViewBag.Title = "Index";
}

@model IEnumerable<obligatorio_PIII.Models.PlanDeAnuncios>

@{
    ViewBag.Title = "Index";
}

<h2>Planes de Anuncios</h2>

<p>
    @Html.ActionLink("Nuevo Plan", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Duración</th>
            <th>Frecuencia</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Duracion</td>
                <td>@item.Frecuencia</td>
                <td>@item.Estado</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
