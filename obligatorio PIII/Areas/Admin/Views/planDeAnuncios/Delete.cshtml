odel obligatorio_PIII.Models.PlanDeAnuncios

@{
    ViewBag.Title = "Eliminar Plan";
}

<h2>¿Eliminar Plan de Anuncios?</h2>

<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Duración</dt>
        <dd>@Model.Duracion</dd>
        <dt>Frecuencia</dt>
        <dd>@Model.Frecuencia</dd>
        <dt>Estado</dt>
        <dd>@Model.Estado</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
    }
</div>
