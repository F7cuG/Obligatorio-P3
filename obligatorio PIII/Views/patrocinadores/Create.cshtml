@model obligatorio_PIII.Models.patrocinadores

@{
    ViewBag.Title = "Crear Patrocinador";
}

<h2>Crear Patrocinador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(m => m.Descripcion)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
